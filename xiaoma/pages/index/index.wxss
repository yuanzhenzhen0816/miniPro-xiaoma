/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden
}
@keyframes fade-in {  
      0% {opacity: 0;}/*初始状态 透明度为0*/  
      40% {opacity: 0;}/*过渡状态 透明度为0*/  
      100% {opacity: 1;}/*结束状态 透明度为1*/  
  }  
#bj{
  width:100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
  z-index: 9;
  opacity: 1;
  animation:fade-in 1.5s;
}

.container{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10;
  left: 0;
  top: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 400rpx;
  opacity: 1;
  animation:fade-in 1.5s;
}
