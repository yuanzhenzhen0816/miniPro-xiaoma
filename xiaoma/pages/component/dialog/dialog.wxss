/* pages/component/dialog/dialog.wxss */
.dialog{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 99999
}
.dialog-mask{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
  position: fixed;
  z-index: 800
}
.content{
  background: #fff;
  width: 100%;
  padding: 100rpx 0;
  border-top: 1px solid #ccc;
  position: relative;
  border-radius: 10rpx;
  text-align: center;
}
.btn{
  background: #FF7173;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  z-index: 900;
}
.btn2{
  background: #FF7173;
  width: 50%;
  float: left;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  z-index:900;
}
.cancel{
  background: #ccc
}
