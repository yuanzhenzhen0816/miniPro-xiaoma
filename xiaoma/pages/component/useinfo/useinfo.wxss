/* pages/component/footinfo/footinfo.wxss */
@import "../../common/common.wxss";
.footinfo{
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 2px 25px -3px rgba(0,0,0,0.25);
  z-index: 200
}
.lic_info{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}

.toux{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.toux image{
   width: 80rpx;
   height: 80rpx;
   border-radius: 50%;
   background:linear-gradient(90deg,rgba(251,198,164,1),rgba(255,98,99,1));
   padding: 1px;
   margin-right: 5rpx
}
.xuh{
  display: flex;
  flex-direction: column;
  align-items: flex-end
}
.line{
  margin-top: 10rpx;
  width: 100%;
  height: 3rpx;
  background:linear-gradient(90deg,rgba(251,198,164,1),rgba(255,98,99,1));
}
.use_content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}
.pay{
  display: flex;
  flex-direction: column; 
  align-items: center;
  justify-content: center;
}
.use_time{
  display: flex;
  flex-direction: column; 
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-sizing:border-box;
	border:2px solid transparent;
	background-clip:padding-box,border-box;
	background-origin:padding-box,border-box;
	background-image:linear-gradient(#fff,#fff),linear-gradient(#FBC5A3,#FF6263);
}
.red{
  font-size: 48rpx;
  color: #FF7173
}

.cell view{
  display: inline-block;
  width: 7rpx;
  height: 25rpx;
  background: #ccc;
  margin-left: 3rpx;
}
.cell view.active{
  background: #F8E71C;
}
.use_info{
  display: flex;
  justify-content:space-around;
  align-items: center;
}