/* pages/component/footinfo/footinfo.wxss */
@import "../../common/common.wxss";
.footinfo{
  position: absolute;
  z-index: 200;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background: #fff;
}
.lic_info{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}

.toux{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.toux image{
   width: 80rpx;
   height: 80rpx;
   border-radius: 50%;
   background:linear-gradient(90deg,rgba(251,198,164,1),rgba(255,98,99,1));
   padding: 1px;
   margin-right: 5rpx
}
.xuh{
  display: flex;
  flex-direction: column;
  align-items: flex-end
}
.line{
  margin-top: 10rpx;
  width: 100%;
  height: 3rpx;
  background:linear-gradient(90deg,rgba(251,198,164,1),rgba(255,98,99,1));
}
.use_content{
  display: flex;
  justify-content: space-around;
  align-items: center
}
.use_time{
  display: flex;
   flex-direction: column; 
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 1px solid #ccc
}